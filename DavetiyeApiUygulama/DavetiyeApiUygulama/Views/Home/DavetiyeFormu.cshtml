@model DavetiyeApiUygulama.Models.Davetiye<h1>DavetiyeFormu</h1><h4>Davetiye</h4><hr /><div class="row">    <div class="col-md-4">        <form asp-action="DavetiyeFormu">            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            <div class="form-group">                <label asp-for="Ad" class="control-label"></label>                <input asp-for="Ad" class="form-control" />                <span asp-validation-for="Ad" class="text-danger"></span>            </div>            <div class="form-group">                <label asp-for="Email" class="control-label"></label>                <input asp-for="Email" class="form-control" />                <span asp-validation-for="Email" class="text-danger"></span>            </div>            <div class="form-group">                <label asp-for="KatilimaDurumu" class="control-label"></label>                <div class="col-md-10">                    @Html.DropDownListFor(x => x.KatilimaDurumu, new[]                         {                   new SelectListItem()                   {                       Text="Evet Geliyorum",Value=bool.TrueString                   },                   new SelectListItem()                   {                       Text="Malesef Gelemiyorum", Value=bool.FalseString                   }               }, "Geliyor Musun?", new { @class = "form-control" })                </div>            </div>            <div class="form-group">                <input type="submit" value="Create" class="btn btn-primary" />            </div>        </form>    </div></div><div>    <a asp-action="Index">Back to List</a></div>@section Scripts {    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}